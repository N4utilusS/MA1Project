<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DetailsBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc"
            android:columnCount="1" >

            <EditText
                android:id="@+id/new_bottle_appellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Appellation"
                android:textAppearance="@style/TextSmall" />

            <EditText
                android:id="@+id/new_bottle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Name"
                android:textAppearance="@style/TextName" />

            <EditText
                android:id="@+id/new_bottle_vintage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="1992"
                android:inputType="number"
                android:textAppearance="@style/TextSmall" />

            <EditText
                android:id="@+id/new_bottle_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Disneyland"
                android:textAppearance="@style/TextSmall" />

            
        </GridLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc" >

            <EditText
                android:id="@+id/new_bottle_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="4"
                android:inputType="number"
                android:textAppearance="@style/TextSmall" />
            
            <EditText
                android:id="@+id/new_bottle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="21"
                android:inputType="number"
                android:layout_gravity="right"
                android:textAppearance="@style/TextSmall" />
            
        </GridLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/details_bloc" >
            
            <RatingBar
                android:id="@+id/new_bottle_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="1.0" />
            
		</LinearLayout>
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/details_bloc" >


            <EditText
                android:id="@+id/new_bottle_colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textAppearance="@style/TextSmall" />
            
            <EditText
                android:id="@+id/new_bottle_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAppearance="@style/TextSmall" />
            
            <EditText
                android:id="@+id/new_bottle_effervescence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textAppearance="@style/TextSmall" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/new_bottle_varieties_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/details_bloc" >
            
            
            
		</LinearLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc"
            android:columnCount="1" >

            <DatePicker
                android:id="@+id/new_bottle_addDate"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:calendarViewShown="false" />
            
            <DatePicker
                android:id="@+id/new_bottle_apogee"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:calendarViewShown="false" />

            
        </GridLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc" >

            <EditText
                android:id="@+id/new_bottle_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C'est dans la zone 51."
                android:textAppearance="@style/TextSmall" />
            
        </GridLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc" >

            <EditText
                android:id="@+id/new_bottle_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Wine!"
                android:textAppearance="@style/TextSmall" />
            
        </GridLayout>
        
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/details_bloc" >

            <EditText
                android:id="@+id/new_bottle_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="47"
                android:inputType="number"
                android:textAppearance="@style/TextSmall" />
            
        </GridLayout>
        
    </LinearLayout>
    

</ScrollView>
